# 基础配置
PROJECT_NAME=TravelerAI
VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8000

# 安全配置
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_MINUTES=43200

# 数据库配置
DATABASE_URL=postgresql://postgres:password@localhost:5432/traveler_ai
ASYNC_DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/traveler_ai

# Redis配置
REDIS_URL=redis://localhost:6379/0

# AI服务配置
DEFAULT_AI_PROVIDER=ollama

# Ollama配置
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b

# DeepSeek配置
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_API_KEY=

# 阿里云百炼配置
BAILIAN_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
BAILIAN_MODEL=qwen-max
BAILIAN_API_KEY=

# 百度地图配置
BAIDU_MAP_BASE_URL=https://api.map.baidu.com
BAIDU_MAP_AK=your-baidu-map-api-key
BAIDU_MAP_TIMEOUT=30

# 缓存配置
AI_CACHE_ENABLED=true
AI_CACHE_TTL=3600
MAP_CACHE_TTL=7200

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json

# 模板配置
TEMPLATES_PATH=templates
MAX_DAYS=30

# 文件存储配置
UPLOAD_PATH=uploads
MAX_FILE_SIZE=10485760 